Q: 
#include <iostream>
using namespace std;
int main(void){
    
    int m[101][101], lin, col, g, i1, j1, i2, j2, q = 1, total = 0;
    
    cin >> lin >> col;
    
    for ( int i = 1; i <= lin; i++){
        for ( int j = 1; j <= col; j++){
            cin >> m[i][j];
        }
    }
    
    cin >> g;
    while ( q <= g ){
        cin >> i1 >> j1 >> i2 >> j2;
        
        for ( int i = i1; i <= i2; i++){
            for ( int j = j1; j <= j2; j++){
                total += m[i][j];
            }
        }
        cout << total << endl;
        total = 0;
        q++;
    }
}
