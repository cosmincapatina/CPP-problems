Q: In a given matrix remove the line k from it.
#include <iostream>
using namespace std;

int main(void)
{
   int i, j, coloane, linii, k, m[401][401];
   
   cin >> linii >> coloane >> k;
   
   for(i = 1; i <= linii; i++){
       for (j = 1; j <= coloane; j++){
           cin >> m[i][j];
       }
   }
   
   for(i = 1; i <= linii; i++){
       for(j = 1; j <= coloane; j++){
            if (j < k){
               cout << m[i][j] << " ";
            }else if (j > k){
                cout << m[i][j] << " ";
            }
        }
       cout << endl;
   }
}
